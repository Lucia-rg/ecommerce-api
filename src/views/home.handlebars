<div class="row">
    <div class="col-12">
        <div class="text-center mb-2">
            <h1 class="display-4"><i class="fas fa-store me-2"></i>Bienvenido a Onda Sonar</h1>
            <p class="lead text-muted">Tu tienda de confianza para los mejores productos</p>
            
            <div class="row mt-4 justify-content-center">
                <div class="col-md-4 mb-1">
                    <a href="/products" class="btn btn-secondary btn-lg w-100 py-3">
                        <i class="fas fa-list me-2"></i>Ver todos los productos
                    </a>
                </div>
                <div class="col-md-4 mb-1">
                    <a href="/realtimeproducts" class="btn btn-secondary btn-lg w-100 py-3">
                        <i class="fas fa-bolt me-2"></i>Productos en Tiempo Real
                    </a>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <h2 class="border-bottom pb-2 text-center">
                    <i class="fas fa-star me-2 text-warning"></i>Productos Destacados
                </h2>
            </div>
        </div>

        {{#if products.length}}
            <div class="row" id="productsContainer">
                {{#each products}}
                    <div class="col-md-6 col-lg-4 mb-4 product-item" 
                    data-category="{{this.category}}" data-title="{{this.title}}" data-product-id="{{this.id}}">

                        <div class="product-card h-90">
                            <div class="position-relative">
                                {{#if this.thumbnails.length}}

                                    <img src="{{this.thumbnails.[0]}}" alt="{{this.title}}"
                                    class="card-img-top product-image">
                                    

                                {{else}}

                                    <div class="bg-light d-flex align-items-center justify-content-center"
                                    style="height: 200px; border-radius: 5px;">
                                        <i class="fas fa-image fa-3x text-muted"></i>  
                                    </div>

                                {{/if}}

                                <span class="position-absolute top-0 end-0 m-2 badge {{#if this.status}}bg-success{{else}}bg-danger{{/if}}">
                                    {{#if this.status}}Disponible{{else}}Agotado{{/if}}
                                </span>

                            </div>

                            <div class="card-body">
                                <h5 class="card-title text-truncate">{{this.title}}</h5>
                                <p class="card-text text-muted small">{{this.description}}</p>

                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="h5">${{this.price}}</span>
                                    <span class="badge bg-dark">{{this.stock}} unidades</span>

                                </div>

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-tag me-1"></i>{{this.category}}
                                    </span>
                                    <span class="badge bg-light text-dark">
                                        #{{this.code}}
                                    </span>
                                </div>

                            </div>

                        </div>

                    </div>
                {{/each}}
            </div>

            <div class="text-center mt-4">
                <a href="/products" class="btn btn-secondary w-100">
                    <i class="fas fa-arrow-right me-2"></i>Ver todos los productos
                </a>
            </div>

        {{else}}
            <div class="text-center py-5">
                <i class="fas fa-box-open fa-4x text-muted mb-3"></i>
                <h3 class="text-muted">No hay productos disponibles</h3>
                <p class="text-muted">Agrega algunos productos para comenzar</p>
                <a href="/realtimeproducts" class="btn btn-secondary mt-3">
                    <i class="fas fa-plus me-1"></i> Crear Primer Producto
                </a>
            </div>
        {{/if}}

    </div>
</div>
